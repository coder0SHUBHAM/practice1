

public class Arrays {
   public static void main(String args[]) {
    int[] arr1 = {1,2,4};
    int[] arr2 = {3,2,4};
    int [] merg = new int[arr1.length + arr2.length];

    for(int i=0; i<arr1.length; i++) {
      merg[i]= arr1[i];

    }
    for(int i=0; i<arr2.length; i++) {
      merg[arr1.length + i]= arr2[i];

   }
   for(int e: merg) {
    System.out.print(e + " ");
   }
}
}
